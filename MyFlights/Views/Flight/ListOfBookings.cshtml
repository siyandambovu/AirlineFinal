@model IEnumerable<Air_Line_Flight.Models.Flight>

@{
    ViewBag.Title = "ListOfBookings";
}

<h2>ListOfBookings</h2>

<p>
    @Html.ActionLink("New Flight", "flight")
</p>
<p>


</p>
@using (Html.BeginForm("ListOfBookings", "flight", FormMethod.Post))
{
    <input type="submit" value="search" class="btn btn-default" />
    @Html.TextBox("s")
}
<p>


</p>
<div style="text-align:center">
    @Html.ActionLink("My Booking(s)", "ListOfBookings")
</div>
<p>


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date1)
